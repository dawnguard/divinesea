<p id="notice"><%= notice %></p>
<h1>Listing Droplets</h1>
<br>
<div class="panel panel-default">

<div class="panel-body">
  <table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @droplets.each do |droplet| %>
      <tr>
        <td><%= droplet.description %></td>
        <td><%= link_to 'Show', droplet %></td>
        <td><%= link_to 'Edit', edit_droplet_path(droplet) %></td>
        <td><%= link_to 'Destroy', droplet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>


<br>

<div class="panel-footer"><%= link_to 'New Droplet', new_droplet_path, class: "btn btn-primary" %></div>
</div>
